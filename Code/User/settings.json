// 将设置放入此文件中以覆盖默认设置
{
    "editor.rulers": [80, 100],
    "editor.renderWhitespace": "boundary",
    "editor.renderControlCharacters": true,
    "window.title": "${dirty}${activeEditorMedium}${separator}${rootName}${separator}",
    "path-intellisense.showHiddenFiles": true,
    "window.zoomLevel": 2,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.snippetSuggestions": "top",
    "gitlens.keymap": "alternate",
    "editor.fontFamily": "'Source Code Pro Medium', Consolas, '微软雅黑', 'Courier New', monospace",
    "window.openFoldersInNewWindow": "on",
    "window.openFilesInNewWindow": "on",
    "editor.minimap.enabled": false,
    "editor.fontSize": 12,
    "workbench.editor.enablePreview": false,
    "gitlens.codeLens.enabled": false,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "markdown-pdf.executablePath": "C:\\Program Files (x86)\\Google\\Chrome\\Application\\chrome.exe",
    "workbench.iconTheme": "vscode-icons",
    "git.autofetch": true,
    "remote.SSH.remotePlatform": {
        "vm-ubuntu18": "linux"
    },
    "plantuml.jar": "E:\\Program\\PlantUML\\plantuml.jar",
    "search.useIgnoreFiles": false,
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "[c]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "[markdown]": {
        "editor.defaultFormatter": "yzhang.markdown-all-in-one"
    },
    "todo-tree.tree.showScanModeButton": false,
    "todo-tree.highlights.customHighlight": {
        "TODO": {
            "icon": "check",
            "type": "line",
            "foreground": "white",
            "iconColour": "yellow",
        },
        // "FIXME": {
        //     "foreground": "black",
        //     "iconColour": "yellow",
        //     "gutterIcon": true
        // }
    },
    "todo-tree.regex.regex": "((//|#|<!--|;|/\\*|\\s*\\*|^)\\s*($TAGS):?|^\\s*- \\[ \\])",
    "workbench.editor.closeEmptyGroups": false,
    "workbench.startupEditor": "newUntitledFile",
    "python.languageServer": "Pylance",
    "python.showStartPage": false,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "python.formatting.provider": "black",
    "tabnine.experimentalAutoImports": true,
    "vsicons.dontShowNewVersionMessage": true,
    "licenser.disableAutoHeaderInsertion": true,
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "security.workspace.trust.banner": "always",
    "security.workspace.trust.startupPrompt": "always",
    "workbench.colorTheme": "Winter is Coming (Dark Blue)",
    // "todo-tree.highlights.defaultHighlight": {
    // }
}